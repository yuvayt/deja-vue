{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		]
	},
	"fmt": {
		"indentWidth": 4,
		"lineWidth": 80,
		"proseWrap": "preserve",
		"semiColons": false,
		"singleQuote": true,
		"useTabs": true
	},
	"imports": {
		"@/": "./src/",
		"@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.2",
		"@std/path": "jsr:@std/path@^1.0.8",
		"@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@5.2.1",
		"autoprefixer": "npm:autoprefixer@^10.4.20",
		"postcss": "npm:postcss@^8.4.49",
		"tailwindcss": "npm:tailwindcss@^3.4.17",
		"vite": "npm:vite@6.0.5",
		"vue": "npm:vue@3.5.13"
	},
	"lint": {
		"exclude": [
			".vite/"
		]
	},
	"nodeModulesDir": "auto",
	"tasks": {
		"build": "vite build",
		"dev": "vite",
		"preview": "vite preview"
	},
	"version": "0.0.1"
}
